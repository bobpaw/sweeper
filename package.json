{
  "name": "sweeper",
  "version": "1.0.1",
  "description": "HTML5 and JavaScript Minesweeper game",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "pretest": "npm run lint",
    "test": "nyc --reporter=html --reporter=text mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint --cache --cache-location .eslintcache .",
    "lint-fix": "eslint --cache --cache-location .eslintcache --fix .",
    "compile:ts": "tsc -b",
    "clean:ts": "tsc -b --clean",
    "build:sass": "sass styles.scss styles.css",
    "clean:sass": "rimraf styles.css",
    "compile": "npm run compile:ts",
    "prebuild": "npm run compile",
    "build": "npm run build:sass",
    "prestart:dev": "npm run build",
    "start:dev": "http-server -a localhost -g -b"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bobpaw/sweeper.git"
  },
  "keywords": [
    "browser",
    "minesweeper",
    "games"
  ],
  "author": "Aiden Woodruff",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/bobpaw/sweeper/issues"
  },
  "homepage": "https://github.com/bobpaw/sweeper#readme",
  "dependencies": {
    "minify": "^7.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.34.1",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "coveralls": "^3.1.0",
    "eslint": "^7.28.0",
    "eslint-plugin-jsdoc": "^35.1.3",
    "http-server": "^0.12.3",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "mocha": "^9.0.0",
    "nyc": "^15.1.0",
    "sinon": "^11.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "npm run lint:fix"
  }
}
